      <script>
        (function () {
          const overlay = document.querySelector('.overlay');
          const popup = document.getElementById('company-popup');
          const closeBtn = document.getElementById('close-company-popup');
          const searchInput = document.getElementById('company-search');
          const dropdownList = document.getElementById('dropdown-list');
          const confirmBtn = document.getElementById('confirm-location-switch');
          const statusBox = document.getElementById('company-popup-status');

          const domain = '{{ shop.domain }}';
          const salesRepCustomerId = '{{ customer.id }}';
          const cookieKey = 'salesrep_selected';

          let selectedLocation = null;

          function setCookie(name, value, minutes) {
            const d = new Date();
            d.setTime(d.getTime() + minutes * 60 * 1000);
            document.cookie = `${name}=${value}; expires=${d.toUTCString()}; path=/`;
          }
          function getCookie(name) {
            const match = document.cookie.match(new RegExp('(^| )' + name + '=([^;]+)'));
            return match ? match[2] : null;
          }

          function showPopup() {
            overlay.style.visibility = 'visible';
            popup.classList.add('visible');
          }
          function hidePopup() {
            overlay.style.visibility = 'hidden';
            popup.classList.remove('visible');
          }

          function filterDropdown() {
            const term = searchInput.value.toLowerCase().trim();
            const items = dropdownList.querySelectorAll('.dropdown-item');
            items.forEach((item) => {
              const text = item.textContent.toLowerCase();
              item.style.display = text.includes(term) ? 'block' : 'none';
            });
          }

          function openDropdown() {
            dropdownList.classList.add('open');
          }

          function closeDropdown() {
            dropdownList.classList.remove('open');
          }

          searchInput.addEventListener('input', filterDropdown);
          searchInput.addEventListener('focus', openDropdown);

          document.addEventListener('click', (e) => {
            const dropdownWrapper = document.querySelector('.company-dropdown');
            if (dropdownList.classList.contains('open') && !dropdownWrapper.contains(e.target)) {
              closeDropdown();
            }
          });

          dropdownList.addEventListener('click', (e) => {
            const item = e.target.closest('.dropdown-item');
            if (item) {
              selectedLocation = {
                locationId: item.dataset.locationId,
                companyId: item.dataset.companyId,
                label: item.querySelector('strong').textContent + ' — ' + item.querySelector('small').textContent,
              };
              searchInput.value = selectedLocation.label;
              closeDropdown();
            }
          });

          closeBtn.addEventListener('click', hidePopup);
          overlay.addEventListener('click', hidePopup);
          document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') hidePopup();
          });

          document.addEventListener('DOMContentLoaded', () => {
            const cookie = getCookie(cookieKey);
            if (!cookie) {
              document.querySelector('.main-content')?.classList.add('hidden-by-cookie');
              showPopup();
            }

            const openBtn = document.getElementById('open-company-switch');
            if (openBtn) openBtn.addEventListener('click', showPopup);
          });

          confirmBtn.addEventListener('click', async () => {
            if (!selectedLocation) {
              statusBox.innerHTML = '<div class="error">⚠ Please select a location.</div>';
              return;
            }

            confirmBtn.disabled = true;
            confirmBtn.querySelector(".loading__spinner").classList.remove("hidden");
            confirmBtn.querySelector("span").innerText = "";

            {% comment %} statusBox.innerHTML = '<div class="loading"><span class="spinner"></span> Switching location...</div>'; {% endcomment %}

            try {
              const res = await fetch('/apps/api/transfer-salesrep', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                  domain,
                  salesRepCustomerId,
                  targetCompanyId: selectedLocation.companyId,
                  targetLocationId: selectedLocation.locationId
                }),
              }); 

              const result = await res.json();
              if (!result.success) throw result;

              setCookie(cookieKey, 'yes', 59);
              document.querySelector('.main-content')?.classList.remove('hidden-by-cookie');

              const returnTo = encodeURIComponent(`{{ request.path }}`);
              const locHref = `https://${domain}/company_location/update?location_id=${encodeURIComponent(
                selectedLocation.locationId
              )}&return_to=${returnTo}`;
              window.location.href = locHref;
            } catch (err) {
              statusBox.innerHTML = `<div class="error">❌ Failed to switch: ${
                err.error?.message || 'Unexpected error.'
              }</div>`;
              confirmBtn.disabled = false;
            }
          });
        })();
      </script>
