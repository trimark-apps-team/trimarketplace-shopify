{% comment %}
  Domain-based ERP metafield mapping
  Maps the current store domain to the appropriate custom metafield key.
{% endcomment %}

{% assign domain = shop.permanent_domain | downcase %}
{% if domain contains 'marlinn' or domain contains 'fiveguys' %}
  1_erp_id_marlinn_ipics
{% elsif domain contains 'ab' %}
  1_erp_id_adams_burch_sx
{% elsif domain contains 'sskemp' %}
  1_erp_id_sskemp_jde
{% elsif domain contains 'rwsmith' %}
  1_erp_id_rwsmith_sx
{% endif %}

{%- comment -%}
  Example usage:
  {{ product.metafields.custom[erp_id_key] }}
{%- endcomment -%}