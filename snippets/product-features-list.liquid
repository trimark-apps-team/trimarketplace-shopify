{% assign bullet1 = product.metafields.custom['8_feature_bullet_1'] %}
{% assign bullet2 = product.metafields.custom['8_feature_bullet_2'] %}
{% assign bullet3 = product.metafields.custom['8_feature_bullet_3'] %}
{% assign bullet1_text = product.metafields.custom['8_feature_bullet_1'].value | strip %}
{% assign bullet2_text = product.metafields.custom['8_feature_bullet_2'].value | strip %}
{% assign bullet3_text = product.metafields.custom['8_feature_bullet_3'].value | strip %}

{% if bullet1_text != blank and bullet1_text != 'N/A' or
      bullet2_text != blank and bullet2_text != 'N/A' or
      bullet3_text != blank and bullet3_text != 'N/A' %}
  <strong><p>Features:</p></strong>
  <ul class="product-feature-list">
    {% if bullet1_text != blank and bullet1_text != 'N/A' %}
      <li>{{ product.metafields.custom['8_feature_bullet_1'] | metafield_tag }}</li>
    {% endif %}
    {% if bullet2_text != blank and bullet2_text != 'N/A' %}
      <li>{{ product.metafields.custom['8_feature_bullet_2'] | metafield_tag }}</li>
    {% endif %}
    {% if bullet3_text != blank and bullet3_text != 'N/A' %}
      <li>{{ product.metafields.custom['8_feature_bullet_3'] | metafield_tag }}</li>
    {% endif %}
  </ul>
{% endif %}

