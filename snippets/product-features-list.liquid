{% assign bullet1 = product.metafields.custom['8_feature_bullet_1'] %}
{% assign bullet2 = product.metafields.custom['8_feature_bullet_2'] %}
{% assign bullet3 = product.metafields.custom['8_feature_bullet_3'] %}

{% assign bullet1_value = bullet1 | metafield_tag %}
{% assign bullet2_value = bullet2 | metafield_tag %}
{% assign bullet3_value = bullet3 | metafield_tag %}

{% assign has_bullet1 = false %}
{% assign has_bullet2 = false %}
{% assign has_bullet3 = false %}

{% if bullet1 and bullet1_value != blank and bullet1_value contains "N/A" %}
  {% assign has_bullet1 = true %}
{% endif %}

{% if bullet2 and bullet2_value != blank and bullet2_value contains "N/A" %}
  {% assign has_bullet2 = true %}
{% endif %}

{% if bullet3 and bullet3_value != blank and bullet3_value contains "N/A" %}
  {% assign has_bullet3 = true %}
{% endif %}

{% if has_bullet1 or has_bullet2 or has_bullet3 %}
  <strong><p>Features:</p></strong>
  <ul class="product-feature-list">
    {% if has_bullet1 %}
      <li>{{ bullet1_value }}</li>
    {% endif %}
    {% if has_bullet2 %}
      <li>{{ bullet2_value }}</li>
    {% endif %}
    {% if has_bullet3 %}
      <li>{{ bullet3_value }}</li>
    {% endif %}
  </ul>
{% endif %}
