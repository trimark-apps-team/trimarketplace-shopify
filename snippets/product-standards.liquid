{% comment %}
  Snippet: standards-logos.liquid
  Description: Displays logos for product Standards, linking to their URLs.
{% endcomment %}
{% assign standards = product.metafields.custom.standards.value %}

{% if standards != blank %}
  <div class="all-standards" style="display: flex; flex-wrap: wrap; gap: 10px; align-items: center;">
    {% for standard in standards %}
      {% if standard.standard_logo != blank and standard.standard_url != blank %}
        <a href="{{ standard.standard_url }}" target="_blank" rel="noopener noreferrer" style="display: inline-block;">
          <img src="{{ standard.standard_logo | img_url: '60x60' }}" 
               alt="{{ standard.standard_name }}" 
               style="width: 60px; height: auto;">
        </a>
      {% endif %}
    {% endfor %}
  </div>
{% endif %}
