<div class="specifications-and-assets">

  <div class="specifications">
    <h3>Specifications</h3>
    <ul>
      {% assign erp_ids = "1_ERP_ID_Marlinn_Ipics,1_ERP_ID_TRMK_Golden,1_ERP_ID_Adams_Burch_SX,1_ERP_ID_SSKemp_JDE,1_ERP_ID_RWSmith_SX,1_ERP_ID_United_East_Lawson,1_ERP_ID_South_M3" | split: ',' %}
      {% for id in erp_ids %}
        {% assign erp = product.metafields.custom[id] %}
        {% if erp %}
          <li><strong>Legacy ERP:</strong> {{ erp }}</li>
          {% break %}
        {% endif %}
      {% endfor %}

      {% if product.vendor %}
        <li><strong>Brand:</strong> {{ product.vendor }}</li>
      {% endif %}

      {% if product.metafields.custom['6_manufacturer_id'] %}
        <li><strong>Manufacturer Number:</strong> {{ product.metafields.custom['6_manufacturer_id'] }}</li>
      {% endif %}

      {% if product.metafields.custom['11_DIM_Length_inside'] %}
        <li><strong>Length:</strong> {{ product.metafields.custom['11_DIM_Length_inside'] }}</li>
      {% endif %}
      {% if product.metafields.custom['11_DIM_Width_inside'] %}
        <li><strong>Width:</strong> {{ product.metafields.custom['11_DIM_Width_inside'] }}</li>
      {% endif %}
      {% if product.metafields.custom['11_DIM_Height_inside'] %}
        <li><strong>Height:</strong> {{ product.metafields.custom['11_DIM_Height_inside'] }}</li>
      {% endif %}
      {% if product.metafields.custom['11_Diameter_inside'] %}
        <li><strong>Diameter:</strong> {{ product.metafields.custom['11_Diameter_inside'] }}</li>
      {% endif %}

      {% if product.metafields.custom['11_capacity_1'] %}
        <li><strong>Capacity:</strong> {{ product.metafields.custom['11_capacity_1'] }}</li>
      {% endif %}

      {% if product.metafields.custom.color %}
        <li><strong>Color:</strong> {{ product.metafields.custom.color }}</li>
      {% endif %}
      {% if product.metafields.custom.material %}
        <li><strong>Material:</strong> {{ product.metafields.custom.material }}</li>
      {% endif %}
      {% if product.metafields.custom.country_of_origin %}
        <li><strong>Country of Origin:</strong> {{ product.metafields.custom.country_of_origin }}</li>
      {% endif %}
    </ul>
  </div>

  {% assign warranty_url = product.metafields.custom['4_warranty_sheet'] %}
  {% assign specsheet_url = product.metafields.custom['4_spec_sheet'] %}
  {% if warranty_url or specsheet_url %}
    <div class="assets">
      <h3>Assets</h3>
      <ul>
        {% if specsheet_url %}
          <li>
            <i class="fas fa-file-pdf"></i>
            <a href="{{ specsheet_url }}" target="_blank" rel="noopener">
              {{ specsheet_url | split: '/' | last }}
            </a>
          </li>
        {% endif %}
        {% if warranty_url %}
          <li>
            <i class="fas fa-file-pdf"></i>
            <a href="{{ warranty_url }}" target="_blank" rel="noopener">
              {{ warranty_url | split: '/' | last }}
            </a>
          </li>
        {% endif %}
      </ul>
    </div>
  {% endif %}

  {% render 'prop65-warning' %}

</div>